<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="table.event-message.1" author="taylar-keast">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="event_message"/>
            </not>
        </preConditions>

        <createTable tableName="event_message">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" unique="true" uniqueConstraintName="uk_event_message_id"/>
            </column>
            <column name="created_date" type="timestamptz"/>
            <column name="topic" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="key" type="varchar"/>
            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>