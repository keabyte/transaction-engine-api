<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="investment_transaction.1" author="taylar-keast">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="investment_transaction"/>
            </not>
        </preConditions>

        <createTable tableName="investment_transaction">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="account_transaction_id" type="int"/>
            <column name="amount" type="decimal"/>
            <column name="currency" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="investment_transaction.fk_account_transaction_id.1" author="taylar-keast">
        <addForeignKeyConstraint baseColumnNames="account_transaction_id"
                                 baseTableName="investment_transaction"
                                 constraintName="fk_account_transaction_id"
                                 referencedColumnNames="id"
                                 referencedTableName="account_transaction"
        />
    </changeSet>
</databaseChangeLog>